<div class="new-article form">
  <h2>Новая статья</h2>
  <%= form_for @article do |f| %>
    <% if @article.errors.any? %>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  
    <div class="form-field">
      <%= f.label :title, t("article.title") %>
      <%= f.text_field :title %>
    </div>
  
    <div class="form-field">
      <%= f.label :body, t("article.body") %>
      <%= f.text_area :body %>
    </div>
  
    <div class="form-field">
      <%= f.check_box :published %>
      <%= f.label :published, t("article.published") %>
    </div>
  
    <div class="form-field">
      <%= f.label :published_at, t("article.published_at") %>
      <%= f.date_select :published_at %>
    </div>
  
    <%= f.submit "Сохранить" %>
  <% end %>
</div>