<!DOCTYPE html>
<html>
<head>
  <title>RubyclubBy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="body-wrap">
    <div id="header" class="cf">
      <% flash.keys.each do |key| %>
        <div class="flash <%= key %>">
          <%= flash[key] %>
        </div>
      <% end %>
    
      <div id="logo">
        <%= link_to image_tag("logo.png"), root_path %>
      
        <div id="main-menu">
          <%= link_to "О клубе", about_path %>
      
          <% if admin? %>
            <%= link_to t("write_article"), new_article_path %>
            <%= link_to t("session.logout"), logout_path %>
          <% else %>
            <%= link_to t("session.login"), login_path %>
          <% end %>
        </div>
      </div>
    </div>
  
    <div id="rubyclub">
      <%= yield %>
    </div>
  
    <div id="footer">
      &copy; 2014&ndash;<%= Time.now.year %> rubyclub.by
    </div>
  </div>
</body>
</html>
